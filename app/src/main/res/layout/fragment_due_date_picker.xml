<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
             tools:context="com.student.john.taskmanager2.addEditTaskViews_Presenters.DueDatePickerFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:paddingTop="20dp">

        <ToggleButton
            android:id="@+id/topLeftDueDateButton"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"

            />

        <ToggleButton
            android:id="@+id/topRightDueDateButton"
            android:layout_width="125dp"
            android:layout_height="55dp"

            />

        <ToggleButton
            android:id="@+id/bottomLeftDueDateButton"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:elevation="0dp"
            />

        <ToggleButton
            android:id="@+id/bottomRightDueDateButton"
            android:layout_width="125dp"
            android:layout_height="55dp"

            />


    </GridLayout>

    <DatePicker
        android:id="@+id/dueDate_datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"

        android:headerBackground="@android:color/transparent"
        android:paddingTop="-100dp"
        android:translationZ="-1dp">

    </DatePicker>


</LinearLayout>
